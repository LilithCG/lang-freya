@top Program { expression* }

@skip { space | LineComment }

expression {
  Identifier |
  String |
  VariableName |
  Operator |
  Application { "{" expression* "}" }
}

@tokens {
  Identifier { 'component' | 'container' | 'softwareSystem' | 'model' | 'workspace' | '!identifiers hierarchical' | 'properties' |
  'person' | 'views' | 'systemcontext' | 'systemLandscape' | 'styles' | 'element' | 'relationship' | 'color' | 'background' | 'shape' | '!constant'}

  String { '"' (!["\\] | "\\" _)* '"' }

  LineComment { "#" ![\n]* }

  VariableName { $[a-zA-Z_\-0-9]+ " ="  }
  Operator {"->"}

  space { $[ \t\n\r]+ }

  "{" "}"
}

@detectDelim
