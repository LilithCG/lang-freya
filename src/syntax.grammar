@top Program { expression* }

@skip { space | LineComment }

expression {
  Identifier |
  String |
  Application { "{" expression* "}" }
}

@tokens {
  Identifier { 'component' | 'container' | 'softwareSystem'}

  String { '"' (!["\\] | "\\" _)* '"' }

  LineComment { "#" ![\n]* }

  space { $[ \t\n\r]+ }

  "{" "}"
}

@detectDelim
